# Alert Triage Service - Environment Configuration
# Copy this file to .env and customize for your environment

# Service Configuration
TRIAGE_SERVICE_NAME=alert-triage
TRIAGE_SERVICE_VERSION=1.0.0
TRIAGE_LOG_LEVEL=INFO

# Ollama LLM Configuration
TRIAGE_OLLAMA_HOST=http://ollama:11434
TRIAGE_PRIMARY_MODEL=foundation-sec-8b
TRIAGE_FALLBACK_MODEL=llama3.1:8b

# LLM Parameters
TRIAGE_LLM_TEMPERATURE=0.1
TRIAGE_LLM_TIMEOUT=60
TRIAGE_MAX_TOKENS=2048

# Confidence Thresholds
TRIAGE_HIGH_CONFIDENCE_THRESHOLD=0.85
TRIAGE_MEDIUM_CONFIDENCE_THRESHOLD=0.70
TRIAGE_AUTO_ACTION_THRESHOLD=0.80

# ML Inference Configuration
TRIAGE_ML_ENABLED=true
TRIAGE_ML_API_URL=http://ml-inference:8001
TRIAGE_ML_TIMEOUT=10
TRIAGE_ML_DEFAULT_MODEL=random_forest

# RAG Configuration (Phase 3.2)
TRIAGE_RAG_ENABLED=false
TRIAGE_RAG_SERVICE_URL=http://rag-service:8001
TRIAGE_RAG_TOP_K=3

# Wazuh Integration (Optional)
# TRIAGE_WAZUH_DASHBOARD_URL=https://wazuh.example.com
# TRIAGE_WAZUH_API_URL=https://wazuh.example.com:55000

# TheHive Integration (Optional)
# TRIAGE_THEHIVE_URL=http://thehive:9000
# TRIAGE_THEHIVE_API_KEY=your_api_key_here

# Performance Tuning
TRIAGE_MAX_CONCURRENT_REQUESTS=10
TRIAGE_REQUEST_TIMEOUT=120

# Security (Production)
TRIAGE_API_KEY_ENABLED=false
# TRIAGE_API_KEY=your_secure_api_key_here
